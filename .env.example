# NEXUS_NAIR Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nexus_nair

# Stripe Configuration (VaultPay™)
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_BUCKET_NAME=hotstack-bucket

# NEXUS_NAIR Configuration
BRANDS_VERIFIED=13713
TARGET_ACHIEVEMENT=152.4
VORTEX_STATUS=OPEN
PRESIDENT=Heyns Schoeman
ORGANIZATION=Frosted Roots (Global)

# VaultMesh Configuration
PULSE_INTERVAL=9
GORILLA_CODEX_ENABLED=true

# Frontend URL
FRONTEND_URL=http://localhost:3001

# R2 Mirror Configuration
R2_MIRROR_PATH=repos/nexus-nair/
R2_SYNC_INTERVAL=9

# Offline VaultNode™ (2026 Preview)
OFFLINE_VAULTNODE_ENABLED=false
STARLINK_INTEGRATION=Direct-to-Cell
